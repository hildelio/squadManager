
@{
    Layout = null;
    ViewData["Title"] = "Esqueceu a Senha?";
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <!-- Botão de Voltar -->
    <a href="/" class="btn btn-light btn-lg mb-2">
        <i class="bi bi-arrow-left"></i>
        <span class="ms-2">Voltar</span>
    </a>

    <div class="card p-4 shadow mt-4">
        <h1 class="mb-4 text-center">Esqueceu a Senha?</h1>

        <!-- Formulário de Recuperação de Senha -->
        <form class="text-center">
            <div class="mb-3">
                <label for="email" class="form-label visually-hidden">Email</label>
                <input type="email" required id="email" name="email" class="form-control" placeholder="Digite seu email" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
        </form>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/forgotPassword.js"></script>
