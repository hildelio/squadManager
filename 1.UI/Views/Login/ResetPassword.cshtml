
@{
    Layout = null;
    ViewData["Title"] = "Redefinir Senha";
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <!-- Botão de Voltar -->
    <a href="/" class="btn btn-light btn-lg mb-2">
        <i class="bi bi-arrow-left"></i>
        <span class="ms-2">Voltar</span>
    </a>

    <div class="card p-4 shadow mt-4">
        <h1 class="mb-4 text-center">Redefinir Senha</h1>

        <!-- Formulário de Recuperação de Senha -->
        <form class="text-center">
            <div class="mb-3">
                <input type="password" required id="senha" name="senha" class="form-control" placeholder="Senha" />
            </div>
            <div class="mb-3">
                <input type="password" required id="confirma-senha" name="confirma-senha" class="form-control" placeholder="Confirme a Senha" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
        </form>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/resetPassword.js"></script>
